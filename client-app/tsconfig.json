{
  "compilerOptions": {
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "config/*": ["config/*"],
      "spec/*": ["test/spec/*"],
      "src/*": ["src/*"]
    }
  }
}
